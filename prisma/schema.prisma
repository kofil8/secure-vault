generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum fileType {
  pdf
  docx
  excel
  png
  jpg
  jpeg
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  password        String
  name            String
  phoneNumber     String?
  profileImage    String?
  bio             String?
  refreshToken    String?
  securityAnswer1 String?
  securityAnswer2 String?
  securityAnswer3 String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  files file[]

  @@map("users")
}

