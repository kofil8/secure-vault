generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  email               String   @unique
  password            String
  name                String
  phoneNumber         String?
  profileImage        String?
  bio                 String?
  refreshToken        String?
  securityAnswer1Hash String? // normalized + hashed
  securityAnswer2Hash String?
  securityAnswer3Hash String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  files          File[]
  lastSavedFiles File[] @relation("LastSavedBy")

  @@map("users")
}

model File {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @db.ObjectId
  user            User      @relation(fields: [userId], references: [id])
  fileName        String
  fileType        String // Changed to String for flexibility (store full MIME type like 'application/pdf', 'image/png', etc.)
  fileSize        Int
  fileUrl         String // publicly accessible URL
  filePath        String? // server path
  fileBlob        String? // optional base64 blob
  fileDescription String? // Optional field for file description
  tags            String[] // Array of tags for categorizing the file
  isFavorite      Boolean   @default(false)
  isDeleted       Boolean   @default(false)
  deletedAt       DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  version       Int       @default(1)
  lastSavedAt   DateTime?
  lastSavedById String?   @db.ObjectId
  lastSavedBy   User?     @relation("LastSavedBy", fields: [lastSavedById], references: [id])

  @@map("files")
}
